# -----------------------------
# SERVER CONFIG
# -----------------------------
PORT=8000
NODE_ENV=development
# REACT_APP_API_URL=http://localhost:3000   # Frontend URL

# -----------------------------
# POSTGRESQL DATABASE
# -----------------------------
DATABASE_URL=postgresql://username:password@host:port/dbname
PROD_DATABASE_SSL=true   # true for production, false for local

# -----------------------------
# JWT AUTH
# -----------------------------
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET_EXPIRES_IN=30d

# -----------------------------
# CLOUDINARY (Image Hosting)
# -----------------------------
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# -----------------------------
# STRIPE PAYMENTS
# -----------------------------
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# -----------------------------
# PAYSTACK PAYMENTS
# -----------------------------
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# -----------------------------
# EMAIL (SendPulse + SMTP)
# -----------------------------
SENDPULSE_CLIENT_ID=your_sendpulse_client_id
SENDPULSE_CLIENT_SECRET=your_sendpulse_client_secret

# -----------------------------
# RATE LIMITER
# -----------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# -----------------------------
# COOKIE / SESSION SECRET
# -----------------------------
COOKIE_SECRET=your_cookie_secret_here

# -----------------------------
# LOGGING
# -----------------------------
LOG_LEVEL=info
LOG_FILE=logs/app.log

HEALTH_TOKEN=your_health_token_here
ALLOW_BOOTSTRAP=false

# -----------------------------
# UPSTASH REDIS
# -----------------------------
UPSTASH_REDIS_REST_URL=your_upstash_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_rest_token
